<Window x:Class="ImageTag.AddTagDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddTagDlg" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=taglist}"
    >
    <Grid Margin="15">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" >
                <Label>Select or Enter Tag to add:</Label>
                <ComboBox Name="taglist" 
                          IsEditable="True" 
                          SelectionChanged="Taglist_OnSelectionChanged" 
                          MinWidth="150"
                          />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Name="btnDlgOK" 
                        Content="_Ok"
                        Click="BtnDlgOK_OnClick" 
                        MinWidth="60"
                        />
                <Button IsCancel="True" 
                        IsDefault="True" 
                        Content="_Cancel"
                        MinWidth="60"
                        />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
